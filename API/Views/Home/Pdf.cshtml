    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body>
    <!-- Main Container -->
    <div class="container">
        <!-- Navigation -->
        <header>
            <a href="">
                <h4 class="logo">PEACH INSURANCE</h4>
            </a>
            <!--<nav>
              <ul>
                <li><a href="#hero">HOME</a></li>
                <li><a href="#about">ABOUT</a></li>
                <li> <a href="#contact">CONTACT</a></li>
              </ul>
            </nav>-->
        </header>
        <!-- Policy Section -->
        <section class="policy" id="policy">
            <h2>THANK YOU FOR CHOOSING PEACH INSURANCE FOR YOUR INSURANCE NEEDS</h2>
            <p>Your policy information is below.</p>
        </section>
        <!-- Stats Gallery Section -->
        <div class="gallery">
            <div class="thumbnail">
                <h1 class="stats">Policy Number</h1>
                <h4>@ViewData["policyNumber"]</h4>
            </div>
            <div class="thumbnail">
                <h1 class="stats">Effective Date</h1>
                <h4>@ViewData["policyEffectiveDate"]</h4>
            </div>
            <div class="thumbnail">
                <h1 class="stats">Expires On</h1>
                <h4>@ViewData["policyExpiryDate"]</h4>
            </div>
            <div class="thumbnail">
                <h1 class="stats">Property Address</h1>
                <h4>@ViewData["streetAddress"]</h4>
            </div>
        </div>
        <div class="gallery">
            <div class="thumbnail">
                <h1 class="stats">Customer ID</h1>
                <h4>@ViewData["customerId"]</h4>
            </div>
            <div class="thumbnail">
                <h1 class="stats">Name of Insured</h1>
                <h4>@ViewData["firstName"] @ViewData["lastName"]</h4>
            </div>
            <div class="thumbnail">
                <h1 class="stats">Date of Birth</h1>
                <h4>@ViewData["dateOfBirth"]</h4>
            </div>
            <div class="thumbnail">
                <h1 class="stats">Mobile Number</h1>
                <h4>@ViewData["mobileNumber"]</h4>
            </div>
        </div>
        <section class="coverage">
            <h2>Coverage Summary</h2>
            <table>
                <tr>
                    <th style="text-align: left">Coverage</th>
                    <th style="text-align: left">Maximum Amount</th>
                    <th style="text-align: left">Cost</th>
                </tr>
                <tr>
                    <td>Personal Property</td>
                    <td>@ViewData["personalPropertyCoverage"]</td>
                    <td>Included</td>
                </tr>
                <tr>
                    <td>Personal Liability</td>
                    <td>@ViewData["personalLiabilityLimit"]</td>
                    <td>Included</td>
                </tr>
                <tr>
                    <td>Property Damage to Others</td>
                    <td>@ViewData["damageToPropertyOfOthers"]</td>
                    <td>Included</td>
                </tr>
                <tr>
                    <td>Deductible</td>
                    <td>@ViewData["propertyDeduction"]</td>
                    <td>Included</td>
                </tr>
                <tr class="premium">
                    <td>Total Premium</td>
                    <td>&nbsp;</td>
                    <td>@ViewData["totalAmount"]</td>
                </tr>
            </table>
        </section>
        <!-- Footer Section -->
        <section class="footer_banner" id="contact">
            <h2 class="hidden">YOU'RE AMAZING</h2>
            <p class="hero_header">
                You’re now part of a special group of people, who participate in
                making life better . Together, we’ll be able to make insurance an
                honest, simple and fun experience. Thanks for joining, we’re sure you’re gonna love it here :)
            </p>
        </section>
        <!-- Copyrights Section -->
        <div class="copyright">&copy;2020 Peach Insurance</div>
    </div>
    <!-- Main Container Ends -->
</body>
</html>
